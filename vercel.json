{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/node"
    },
    {
      "src": ".next/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    },
    {
      "src": "/sign-up",
      "dest": "/sign-up"
    },
    {
      "src": "/sign-in",
      "dest": "/sign-in"
    },
    {
      "src": "/dashboard",
      "dest": "/dashboard"
    },
    {
      "src": "/verify-username",
      "dest": "/verify-username"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
